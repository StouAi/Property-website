                        <option value="950000">950.000€</option>
                        <option value="1000000">1.000.000€</option>
                    </select>
                </div>

            </div>
    </div>

    <div class="surface-cont">
        <button id="surface-btn">Surface</button>
        <div id="surface-menu">
