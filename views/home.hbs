<link rel="stylesheet" href="/styles/home.css">

<section class="search-container">
    <div class="catchphrase">
        <h1>{{catchphrase}}</h1>
    </div>

    <form action="/search" method="POST">
        <div class="buy-rent">
            <div class="tabs">
                <input type="radio" name="tabs" value="rent" id="buy" checked>
                <label class="tab" for="buy">Αγορά</label>
                <input type="radio" name="tabs" value="buy" id="rent">
                <label class="tab" for="rent">Ενοικίαση</label>
                <span class="glider"></span>
            </div>
        </div>
    </form>

    <div class="search-bar">
        <input type="text" placeholder="Country, City, ZIP Code, Neighborhood etc">
        <button type="submit"><img src="images/search-icon.png"></button>
    </div>
</section>

<section class="listings">
    {{#if propertiesForSale}}
        <div>
            <h2>Νέα Ακίνητα προς Πώληση</h2>
        </div>
        
        <div class="sale-listings">
            {{#each propertiesForSale}}
                <a href="/property/{{this.id}}">
                    <figure class="property-listing">
                        <img src="images/bgr-photo-main.jpg" alt="House Image">
                        <div class="property-info">
                            <p class="type">{{this.type}} / {{this.subtype}}</p>
                            <p class="price"><b>€{{this.price}}</b></p>
                            <p class="info"><b>{{this.bedrooms}}</b> bed  <b>{{this.bathrooms}}</b> bath  <b>{{this.surface}}</b> m2</p>
                            <p class="address">{{this.address}}</p>
                        </div>
                    </figure>
                </a>
            {{/each}}
        </div>
    {{/if}}
    {{#if propertiesForRent}}
        <div>
            <h2>Νέα Ακίνητα προς Ενοικίαση</h2>
        </div>

        <div class="rent-listings">
            {{#each propertiesForRent}}
                <a href="/property/{{this.id}}">
                    <figure class="property-listing">
                        <img src="images/bgr-photo-main.jpg" alt="House Image">
                        <figcaption>
                            <h2>{{this.type}}</h2>
                            <p>Price: €{{this.price}}</p>
                            <p>{{this.surface}}τ.μ</p>
                        </figcaption>
                    </figure>
                </a>
            {{/each}}
        </div>
    {{/if}}
</section>