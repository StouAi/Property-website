<section class="cont-img-bgr">
    <div class="main-content">

        <div class="catchphrase">
            <h1>{{catchphrase}}</h1>
        </div>

        <div class="buy-rent">
            <div class="tabs">
                <input type="radio" name="tabs" value="rent" id="buy" checked>
                <label class="tab" for="buy">Αγορά</label>
                <input type="radio" name="tabs" value="buy" id="rent">
                <label class="tab" for="rent">Ενοικίαση</label>

                <span class="glider"></span>
            </div>
        </div>

        <div class="search-bar">
            <input type="text" placeholder="Πόλη,Περιοχή,Οδός">
            <button><img src="images/search-icon.png"></button>
        </div>
    </div>
</section>

