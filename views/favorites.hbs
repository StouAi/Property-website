<link rel="stylesheet" href="/styles/favorites.css">

<section class="container">
    <div>
        <h1>Τα αγαπημένα μου</h1>
    </div>

    <hr>

    <div class="favorites">
        {{#if favorites}}
            {{#each favorites}}
                <a href="/property/{{this.id}}">
                    <figure class="property-listing">
                        <img src="images/appartment.jpg" alt="House Image">
                        <div class="property-info">
                            <p class="type">{{this.type}} / {{this.subtype}}</p>
                            <p class="price"><b>€{{this.price}}</b></p>
                            <p class="info"><b>{{this.bedrooms}}</b> bed  <b>{{this.bathrooms}}</b> bath  <b>{{this.surface}}</b> m2</p>
                            <p class="address">{{this.address}}</p>
                        </div>
                    </figure>
                </a>
            {{/each}}
        {{else}}
            <p>Δεν έχετε προσθέσει ακίνητα στα αγαπημένα σας.</p>
        {{/if}}
    </div>

</section>