<style>
    /* Style the container for the custom select */
    #subtype {
    position: relative;
    width: 200px; /* Adjust width as needed */
    }

    /* Hide the original select element */
    #subtype select {
    display: none;
    }

    /* Style the custom dropdown arrow */
    #subtype::after {
    content: '\25BC'; /* Unicode character for down arrow */
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
    pointer-events: none; /* Prevent click events on the pseudo-element */
    }

    /* Style the dropdown menu */
    #subtype select {
    appearance: none;
    outline: none;
    border: 1px solid #ccc;
    background-color: #fff;
    padding: 8px 16px;
    font-size: 16px;
    font-family: Arial, sans-serif;
    cursor: pointer;
    }

    /* Style the options */
    #subtype select option {
    background-color: #fff;
    color: #333;
    }

    /* Style when the select box is open */
    #subtype select:focus {
    border-color: #666;
    }

    /* Style when an option is hovered */
    #subtype select option:hover {
    background-color: #f2f2f2;
    }
</style>

<form action="/createProperty" method="POST">
    <label for="address">Address:</label>
    <input type="text" id="address" name="property[address]" required>

    <label for="description">Description:</label>
    <input type="text" id="description" name="property[description]" required>

    <label for="type">Property Type:</label>
    <select id="type" name="property[type]" required>
        <option value="residential">Residential</option>
    </select>

    <label for="subtype">Property Subtype:</label>
    <select id="subtype" name="property[subtype]" required>
        <option value="house">House</option>
        <option value="apartment">Apartment</option>
        <option value="condo">Condo</option>
    </select>

    <label for="price">Price:</label>
    <input type="number" id="price" name="property[price]" required>

    <label for="surface">Surface:</label>
    <input type="number" id="surface" name="property[surface]" required>

    <label for="floor">Floor:</label>
    <input type="number" id="floor" name="property[floor]" required>

    <label for="levels">Levels:</label>
    <input type="number" id="levels" name="property[levels]" required>

    <label for="bedrooms">Bedrooms:</label>
    <input type="number" id="bedrooms" name="property[bedrooms]" required>

    <label for="bathrooms">Bathrooms:</label>
    <input type="number" id="bathrooms" name="property[bathrooms]" required>

    <label for="constructionYear">Construction year:</label>
    <input type="number" id="constructionYear" name="property[constructionYear]" required>

    <label for="country">Country:</label>
    <input type="text" id="country" name="location[country]" required>

    <label for="city">City:</label>
    <input type="text" id="city" name="location[city]" required>

    <label for="zip">Zip:</label>
    <input type="text" id="zip" name="location[zip]" required>

    <label for="neighborhood">Neighborhood:</label>
    <input type="text" id="neighborhood" name="location[neighborhood]" required>

    <button type="submit">Submit</button>
</form>